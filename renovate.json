{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended", ":dependencyDashboard"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "pip_requirements": {
    "fileMatch": ["my/specifically-named.file", "\\.requirements$"]
  },
  "packageRules": [
    {
      "automerge": true,
      "matchCurrentVersion": ">= 1.0.0",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}

